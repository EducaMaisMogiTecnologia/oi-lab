#!/bin/sh
set -e

action=${1}
version=${2}

for session in Lubuntu Lubuntu-Netbook
do
    conf="/etc/xdg/lxsession/${session}/desktop.conf"
    conf_divert="${conf}.original"

    if [ upgrade != "${action}" ] || dpkg --compare-versions "${version}" lt 0.0.1
    then
        dpkg-divert --package oi-lab-lubuntu-extra-settings --divert ${conf_divert} --rename --add ${conf}
    fi
done
