#!/bin/sh
set -e

install() {
    systemctl enable oi-lab-xorg-daemon.socket
    udevadm trigger
}

case "${1}" in
    configure)
        install "${2}"
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`${1}'" >&2
        exit 1
        ;;
esac
