Section "Device"
    MatchSeat "__fake-seat-2__"
    Identifier "Silicon Motion SM501 Video Card 1"
    BusID "PCI:0:0:0"
    Driver "siliconmotion"
    Option "PanelSize" "1360x768"
    Option "Dualhead" "true"
    Option "monitor-LVDS" "Left Monitor"
    Option "monitor-VGA" "Right Monitor"
EndSection

Section "Device"
    MatchSeat "__fake-seat-2__"
    Identifier "Silicon Motion SM501 Video Card 2"
    BusID "PCI:0:0:0"
    Driver "siliconmotion"
    Option "PanelSize" "1360x768"
    Option "Dualhead" "true"
    Option "monitor-LVDS" "Left Monitor"
    Option "monitor-VGA" "Right Monitor"
EndSection

Section "Screen"
    MatchSeat "__fake-seat-2__"
    Identifier "Silicon Motion SM501 Screen 1"
    Device "Silicon Motion SM501 Video Card 1"
    DefaultDepth 16
EndSection

Section "Screen"
    MatchSeat "__fake-seat-2__"
    Identifier "Silicon Motion SM501 Screen 2"
    Device "Silicon Motion SM501 Video Card 2"
    DefaultDepth 16
EndSection

Section "ServerLayout"
    MatchSeat "__fake-seat-2__"
    Identifier "Silicon Motion SM501 Dual-Card Layout"
    Screen 0 "Silicon Motion SM501 Screen 1"
    Screen 1 "Silicon Motion SM501 Screen 2"
EndSection
