#!/bin/sh

s="seat-sm501"
l="-lvds"
v="-vga"

case "${1}" in
    *1) seat_id=${s}-0-${l} ;;
    *2) seat_id=${s}-0-${v} ;;
    *3) [ $(lspci | grep -c "Silicon.Motion") -gt 1 ] && seat_id=${s}-1-${l} ;;
    *4) [ $(lspci | grep -c "Silicon.Motion") -gt 1 ] && seat_id=${s}-1-${v} ;;
esac

[ -n "${seat_id}" ] && loginctl attach ${seat_id} /sys/${1}
